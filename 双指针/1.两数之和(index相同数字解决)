class Solution:
    def twoSum(self, nums: List[int], target: int) -> List[int]:
        nums_sort=sorted(enumerate(nums),key=lambda x:x[1])
        left,right=0,len(nums_sort)-1
        while left<right:
            current_sum=nums_sort[left][1]+nums_sort[right][1]
            if current_sum==target:
                return nums_sort[left][0],nums_sort[right][0]
            elif current_sum<target:
                left+=1
            else:
                right-=1
